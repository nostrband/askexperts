{
  "name": "askexperts",
  "version": "0.4.2",
  "description": "MCP server for finding experts and asking them questions",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "askexperts": "./bin/cli.js",
    "askexperts-server": "./bin/server.js",
    "askexperts-smart": "./bin/smart-cli.js",
    "askexperts-smart-server": "./bin/smart-server.js",
    "askexperts-parent": "./bin/parent-server.js",
    "askexperts-expert": "./bin/run-expert-example.js"
  },
  "scripts": {
    "build": "tsc",
    "build:client": "npm run build:client:node && npm run build:client:browser",
    "build:client:node": "esbuild src/client/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/client/index.node.js",
    "build:client:browser": "esbuild src/client/index.ts --bundle --platform=browser --target=es2020 --format=esm --outfile=dist/client/index.browser.js",
    "start": "tsx src/index.ts",
    "dev": "tsx --watch src/index.ts",
    "mcp": "tsx src/index.ts",
    "server": "tsx src/server.ts",
    "server:dev": "tsx --watch src/server.ts",
    "smart-server": "tsx src/smartServer.ts",
    "smart-server:dev": "tsx --watch src/smartServer.ts",
    "parent": "tsx src/parentServer.ts",
    "parent:dev": "tsx --watch src/parentServer.ts",
    "expert": "tsx examples/expert-example.ts",
    "get-user": "node bin/get-user.js",
    "add-mcp-server": "node bin/add-mcp-server.js",
    "add-parent-user": "node bin/add-parent-user.js",
    "prepublishOnly": "npm run build && npm run build:client"
  },
  "keywords": [
    "mcp",
    "experts",
    "questions",
    "nostr",
    "askexperts"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "exports": {
    "./client": {
      "node": "./dist/client/index.node.js",
      "browser": "./dist/client/index.browser.js",
      "default": "./dist/client/index.node.js"
    },
    "./expert": {
      "default": "./dist/expert/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nostrband/askexperts.git"
  },
  "bugs": {
    "url": "https://github.com/nostrband/askexperts/issues"
  },
  "homepage": "https://github.com/nostrband/askexperts#readme",
  "dependencies": {
    "@getalby/sdk": "^5.1.0",
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@noble/ciphers": "^1.3.0",
    "@noble/hashes": "^1.8.0",
    "@types/node": "^24.0.8",
    "bolt11": "^1.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "esbuild": "^0.20.2",
    "express": "^4.18.3",
    "nostr-tools": "^2.15.0",
    "nwc-enclaved-utils": "^2.0.8",
    "openai": "^5.8.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3"
  }
}
